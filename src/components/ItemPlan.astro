---
interface Props {
    name: string;
    include: number;
}

const { name, include } = Astro.props;

const pathSvg =
    include == 1
        ? "M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        : "M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z";

const classIcon = include == 1 ? "text-primary-500 " : "text-secondd-600 ";
const classAttr = `w-6 h-6 mr-1 ${classIcon}`;
---

<li class="py-2 border-b-2 border-brand2-100 flex">
    <svg
        slot="icon"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class={classAttr}
    >
        <path stroke-linecap="round" stroke-linejoin="round" d={pathSvg}
        ></path></svg
    >
    <span>{name}</span>
</li>
