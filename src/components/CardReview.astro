---
interface Props {
    couple: string;
    review: string;
}

const { couple, review } = Astro.props;
---

<article
    class="border-solid border-2 border-secondd-300 rounded-md py-5 px-5 mb-5 lg:w-[48%]"
>
    <div class="flex mb-4">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-10 h-10 bg-secondd-300 py-2 px-2 text-white rounded-full mr-3"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
            ></path>
        </svg>

        <b class="text-secondd-600 text-2xl">{couple}</b>
    </div>
    <p class="italic">{review}</p>
</article>
